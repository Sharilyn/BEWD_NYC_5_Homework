<h1>New Movie</h1>

<%= form_for @movie do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <%= f.label :year_released %>
    <%= f.text_field :year_released %>
    <%= f.label :rating %>
    <%= f.text_field :rating %>
    <%= f.submit %>

    <% if @movie.errors.any? %>
    <ul>
    <% @movie.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  
    <% end %>

<% end %>

    